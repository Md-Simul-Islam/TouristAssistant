<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2273ff"
    tools:context=".SylhetActivity">


    <Button
        android:id="@+id/SUSTId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUST"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/teagardenId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tea Garden"
        android:textSize="30sp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/shajalalId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hazrat Shahjalal Mazar Sharif"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/jaflongId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jaflong"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/ratargulId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ratargul"
        android:textSize="30sp"
        android:textStyle="bold"
        />

</LinearLayout>



